/* Panel principal moderno */
.editar-form {
  background: #2a2a2a;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(212, 175, 55, 0.1);
  margin-bottom: 1.5rem;
  border: 1px solid #3a3a3a;
}

.editar-form h4 {
  color: #f0d070;
  margin-bottom: 0.5rem;
  font-weight: 700;
  font-size: 1.5rem;
}

.usuario-seleccionado {
  color: #b0b0b0;
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid #3a3a3a;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.2rem;
  margin-bottom: 1.2rem;
}

.editar-form .form-group {
  margin-bottom: 1.2rem;
}

.editar-form label {
  font-weight: 600;
  color: #e0e0e0;
  margin-bottom: 0.5rem;
  display: block;
  font-size: 0.95rem;
}

.editar-form input,
.editar-form select,
.editar-form textarea {
  width: 100%;
  padding: 0.8rem;
  border: 2px solid #3a3a3a;
  border-radius: 6px;
  font-size: 1rem;
  background: #1a1a1a;
  color: #ffffff;
  transition: all 0.2s;
}

.editar-form input:focus,
.editar-form select:focus,
.editar-form textarea:focus {
  border-color: #d4af37;
  outline: none;
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.15);
  background: #252525;
}

.editar-form input::placeholder {
  color: #666;
}

.checkbox-group {
  display: flex;
  gap: 2rem;
  margin-top: 0.5rem;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  color: #e0e0e0;
  font-weight: 500;
}

.checkbox-label input[type="checkbox"] {
  width: 20px;
  height: 20px;
  cursor: pointer;
}

.password-section {
  background: #1f1f1f;
  padding: 1.2rem;
  border-radius: 8px;
  border: 2px solid #3a3a3a;
  margin-top: 1.5rem;
}

.password-section label {
  color: #f0d070;
}

.password-input {
  background: #2a2a2a !important;
}

.form-actions {
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 2px solid #3a3a3a;
  display: flex;
  justify-content: flex-end;
}

.editar-form button[type="submit"] {
  background: linear-gradient(135deg, #d4af37, #f0d070);
  color: #1a1a1a;
  border: none;
  padding: 0.9rem 2rem;
  border-radius: 8px;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
  font-size: 1.05rem;
}

.editar-form button[type="submit"]:hover:not(:disabled) {
  background: linear-gradient(135deg, #f0d070, #d4af37);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(212, 175, 55, 0.3);
}

.editar-form button[type="submit"]:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

/* Tabs */
.editar-tabs {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.2rem;
  justify-content: flex-start;
}

.editar-tabs button {
  background: #3a3a3a;
  color: #e0e0e0;
  border: none;
  padding: 0.6rem 1.3rem;
  border-radius: 6px 6px 0 0;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s ease;
  border-bottom: 2px solid transparent;
}

.editar-tabs button.active {
  background: #2a2a2a;
  color: #f0d070;
  border-bottom: 2px solid #d4af37;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(212, 175, 55, 0.2);
}

.editar-tabs button:hover:not(.active) {
  background: #4a4a4a;
  color: #ffffff;
}

/* Usuarios */
.editar-usuarios {
  padding: 1.5rem;
  background: #1a1a1a;
  border-radius: 12px;
  min-width: 320px;
}

.editar-usuarios h2 {
  color: #f0d070;
  font-size: 1.8rem;
  margin-bottom: 1.5rem;
  font-weight: 700;
  text-align: center;
}

.usuarios-lista {
  margin-bottom: 2rem;
  background: #2a2a2a;
  border-radius: 8px;
  box-shadow: 0 2px 12px rgba(212, 175, 55, 0.1);
  padding: 1rem 1.5rem;
  border: 1px solid #3a3a3a;
}

.usuarios-lista h4 {
  color: #e0e0e0;
  margin-bottom: 0.7rem;
  font-weight: 700;
  font-size: 1.1rem;
}

.usuarios-lista ul {
  list-style: none;
  padding: 0;
  margin: 0;
  max-height: 220px;
  overflow-y: auto;
}

.usuarios-lista li {
  margin-bottom: 0.5rem;
  color: #e0e0e0;
}

.usuarios-lista button {
  background: #d4af37;
  color: #1a1a1a;
  border: none;
  border-radius: 8px;
  padding: 0.6rem 1.2rem;
  font-size: 0.95rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
  width: 100%;
  text-align: left;
}

.usuarios-lista button:hover {
  background: #f0d070;
  color: #1a1a1a;
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(212, 175, 55, 0.3);
}

/* Mensajes */
.mensaje-editar {
  color: #4ade80;
  font-weight: 600;
  margin-top: 1rem;
  text-align: center;
  padding: 1rem;
  background: rgba(74, 222, 128, 0.1);
  border-radius: 8px;
  border: 1px solid rgba(74, 222, 128, 0.3);
}

@media (max-width: 768px) {
  .form-row {
    grid-template-columns: 1fr;
  }

  .editar-usuarios {
    padding: 1rem;
  }

  .checkbox-group {
    flex-direction: column;
    gap: 1rem;
  }
}
